{
  "name": "toms-starter",
  "version": "1.0.0",
  "private": true,
  "description": "A frontend boilerplate with React, Mobx and Typescript",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "webpack-dev-server --mode development --hot --progress --color --port 3000 --open",
    "build": "webpack -p --colors",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\""
  },
  "license": "MIT",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/jest/setup.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).ts?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "web.js",
      "js",
      "web.jsx",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "<rootDir>/tsconfig.test.json"
      }
    }
  },
  "devDependencies": {
    "@types/classnames": "2.2.6",
    "@types/history": "4.7.0",
    "@types/node": "10.5.7",
    "@types/react": "16.4.8",
    "@types/react-dom": "16.0.7",
    "@types/webpack": "4.4.9",
    "@types/webpack-env": "1.13.6",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "css-loader": "^1.0.0",
    "file-loader": "^1.1.11",
    "html-loader": "^1.0.0-alpha.0",
    "html-webpack-plugin": "^4.0.0-alpha",
    "jest": "^23.5.0",
    "mini-css-extract-plugin": "^0.4.1",
    "postcss": "^7.0.2",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-import": "^12.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^5.3.0",
    "postcss-reporter": "^5.0.0",
    "postcss-url": "^8.0.0",
    "prettier": "^1.14.2",
    "react-hot-loader": "^4.3.4",
    "style-loader": "^0.22.1",
    "ts-jest": "^23.1.4",
    "ts-loader": "^4.4.2",
    "typescript": "^3.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5"
  },
  "dependencies": {
    "@material-ui/core": "^3.0.1",
    "@types/jest": "^23.3.1",
    "classnames": "^2.2.6",
    "ky": "^0.2.0",
    "mobx": "^5.1.0",
    "mobx-react": "^5.2.5",
    "react": "^16.4.2",
    "react-autosize-textarea": "^5.0.0",
    "react-dom": "^16.4.2",
    "tailwindcss": "^0.6.5",
    "takeme": "^0.11.1"
  }
}
